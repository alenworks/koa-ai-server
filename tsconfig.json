{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ESNext",
    "types": [],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "rootDir": "src",      // 指定源码目录
    "outDir": "dist"       // 指定编译输出目录
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}